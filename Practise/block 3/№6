import tkinter as tk
from tkinter import filedialog, messagebox

def new_file():
    global current_file
    if text_area.edit_modified():
        if not messagebox.askyesno("Попередження", "Зберегти зміни перед новим файлом?"):
            text_area.delete(1.0, tk.END)
            current_file = None
    else:
        text_area.delete(1.0, tk.END)
        current_file = None

def open_file():
    global current_file
    if text_area.edit_modified():
        if not messagebox.askyesno("Попередження", "Зберегти зміни перед відкриттям?"):
            return
    file = filedialog.askopenfilename(filetypes=[("Text files", "*.txt"), ("All files", "*.*")])
    if file:
        with open(file, "r", encoding="utf-8") as f:
            text_area.delete(1.0, tk.END)
            text_area.insert(tk.END, f.read())
        current_file = file
        text_area.edit_modified(False)

def save_file():
    global current_file
    if not current_file:
        file = filedialog.asksaveasfilename(defaultextension=".txt",
                                            filetypes=[("Text files", "*.txt"), ("All files", "*.*")])
        if file:
            current_file = file
        else:
            return
    with open(current_file, "w", encoding="utf-8") as f:
        f.write(text_area.get(1.0, tk.END))
    text_area.edit_modified(False)

def exit_app():
    if text_area.edit_modified():
        if not messagebox.askyesno("Попередження", "Зберегти зміни перед виходом?"):
            window.destroy()
            return
        save_file()
    window.destroy()

window = tk.Tk()
window.title("Блокнот")
window.geometry("600x400")

text_area = tk.Text(window, wrap="word")
text_area.pack(expand=True, fill="both")

menu = tk.Menu(window)
window.config(menu=menu)

file_menu = tk.Menu(menu, tearoff=0)
menu.add_cascade(label="Файл", menu=file_menu)
file_menu.add_command(label="Відкрити", command=open_file)
file_menu.add_command(label="Зберегти", command=save_file)
file_menu.add_separator()
file_menu.add_command(label="Вийти", command=exit_app)

current_file = None
text_area.edit_modified(False)

window.protocol("WM_DELETE_WINDOW", exit_app)
window.mainloop()
