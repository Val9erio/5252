import tkinter as tk
from logic import add_numbers, multiply_numbers

class MainWindow:
    def __init__(self):
        self.window = tk.Tk()
        self.window.title("Модульний приклад")
        self.window.geometry("300x200")

        tk.Label(self.window, text="Число 1:").pack()
        self.entry1 = tk.Entry(self.window)
        self.entry1.pack()

        tk.Label(self.window, text="Число 2:").pack()
        self.entry2 = tk.Entry(self.window)
        self.entry2.pack()

        tk.Button(self.window, text="Додати", command=self.add).pack(pady=5)
        tk.Button(self.window, text="Помножити", command=self.multiply).pack(pady=5)

        self.result_label = tk.Label(self.window, text="")
        self.result_label.pack(pady=10)

    def add(self):
        try:
            a = float(self.entry1.get())
            b = float(self.entry2.get())
            self.result_label.config(text=f"Результат: {add_numbers(a, b)}")
        except ValueError:
            self.result_label.config(text="Введіть числа")

    def multiply(self):
        try:
            a = float(self.entry1.get())
            b = float(self.entry2.get())
            self.result_label.config(text=f"Результат: {multiply_numbers(a, b)}")
        except ValueError:
            self.result_label.config(text="Введіть числа")

    def run(self):
        self.window.mainloop()
