class Car:
    def __init__(self, brand, year, mileage):
        self.brand = brand
        self.year = year
        self.mileage = mileage

    def drive(self, km):
        self.mileage += km

    def info(self):
        print(f"Марка: {self.brand}, Рік: {self.year}, Пробіг: {self.mileage} км")

    def __str__(self):
        return f"{self.brand} ({self.year}) - {self.mileage} км"

car1 = Car("Toyota", 2018, 25000)
car1.drive(150)
car1.info()
print(car1)
