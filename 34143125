#include <iostream>
#include <vector>
#include <cstdlib> // Для rand() і srand()
#include <ctime>   // Для time()
#include <algorithm> // Для std::sort

int main() 
    int n;

    std::cout << "Введіть кількість елементів масиву: ";
    std::cin >> n;

    if (n <= 0) {
        std::cout << "Некоректне значення n. Має бути додатнє число." << std::endl;
        return 1;
    }

    std::vector<int> arr(n);

    std::srand(static_cast<unsigned>(std::time(0)));

    std::cout << "Масив перед сортуванням: ";
    for (int i = 0; i < n; ++i) {
        arr[i] = std::rand() % 100; // Випадкові числа в діапазоні [0, 99]
        std::cout << arr[i] << " ";
    }
    std::cout << std::endl;

    std::sort(arr.begin(), arr.end());

    std::cout << "Масив після сортування: ";
    for (const int &num : arr) {
        std::cout << num << " ";
    }
    std::cout << std::endl;

    return 0;
