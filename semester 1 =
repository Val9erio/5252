#include <iostream>
#include <iomanip>  // для шістнадцяткового та вісімкового форматів

int main() {
    int number;

    // Введення цілого числа
    std::cout << "Введіть ціле число: ";
    std::cin >> number;

    // Перевірка, чи є число парним
    std::cout << "Парне: " << (number % 2 == 0 ? "ТАК" : "НІ") << std::endl;

    // Перевірка подільності на 8
    std::cout << "Ділиться на 8: " << (number % 8 == 0 ? "ТАК" : "НІ") << std::endl;

    // Перевірка подільності на 16
    std::cout << "Ділиться на 16: " << (number % 16 == 0 ? "ТАК" : "НІ") << std::endl;

    // Виведення числа у вісімковій та шістнадцятковій системах числення
    std::cout << "Вісімковий формат: " << std::oct << number << std::endl;
    std::cout << "Шістнадцятковий формат: " << std::hex << number << std::endl;

    return 0;
}
